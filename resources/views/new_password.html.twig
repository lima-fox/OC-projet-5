{% extends "base.html.twig" %}

{% block title %}Blog5 - Mot de passe oubli√©{% endblock %}

{% block content %}

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                {% if error_pass != null %}
                    <div class="alert alert-danger" role="alert">
                        {{ error_pass }}
                    </div>
                {% endif %}
                {% if error_pass2 != null %}
                    <div class="alert alert-danger" role="alert">
                        {{ error_pass2 }}
                    </div>
                {% endif %}
                <p>Merci de saisir un nouveau mot de passe</p>
                <!-- Contact Form - Enter your email address on line 19 of the mail/contact_me.php file to make this form work. -->
                <!-- WARNING: Some web hosts do not allow emails to be sent through forms to common mail hosts like Gmail or Yahoo. It's recommended that you use a private domain email address! -->
                <!-- To use the contact form, your site must be on a live web host with PHP! The form will not work locally! -->
                <form name="authentication" id="contactForm" action="/new_password/send" method="POST"  novalidate>
                    <input type="hidden" name="user_id" value="{{ user.getId() }}">
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Mot de passe</label>
                            <input type="password" class="form-control" placeholder="Nouveau mot de passe" id="pass" name="pass" required data-validation-required-message="Veuillez entrer votre nom">
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="form-group floating-label-form-group controls">
                            <label>Mot de passe</label>
                            <input type="password" class="form-control" placeholder="Confirmez votre mot de passe" id="pass2" name="pass2" required data-validation-required-message="Veuillez entrer votre nom">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>

                    <br>
                    <div id="success"></div>
                    <button type="submit" class="btn btn-primary" id="sendMessageButton">Envoyer</button><br><br>
                </form>
            </div>
        </div>
    </div>

    <hr>
{% endblock %}
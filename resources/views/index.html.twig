{% extends "base.html.twig" %}

{% block title %}Blog 5{% endblock %}

{% block head %}
{{ parent() }}
<style type="text/css">
    .important { color: #336699; }
</style>
{% endblock %}

{% block content %}

{% for post in posts %}
<div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-preview">
          <a href="http://blog5.test/post">
            <h2 class="post-title">
              {{ post.title|e }}
            </h2>
            <h3 class="post-subtitle">
               {{ post.chapo|e }}...
            </h3>
          </a>
          <p class="post-meta">
            {{ post.date|e }}</p>
        </div>
        <hr>
        <!-- Pager -->        
      </div>
    </div>
  </div>
  {% endfor %}
        <div class="clearfix col-lg-8 col-md-10 mx-auto ">
          <a class="btn btn-primary float-right" href="http://blog5.test/post">Voir plus de billets &rarr;</a>
        </div>

{% endblock %}


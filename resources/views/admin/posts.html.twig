{% extends "/admin/starter.html.twig" %}

{% block title %}Admin - Posts{% endblock %}

{% block content %}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>DataTables</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">DataTables</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Liste des billets publiés</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>Numéro du billet</th>
                                    <th>Date du billet</th>
                                    <th>Date de la dernière modification</th>
                                    <th>Titre</th>
                                    <th>Chapô</th>
                                    <th>Texte</th>
                                    <th>Auteur</th>
                                    <th>Validation</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for post in posts %}
                                <tr>
                                    <td>{{ post.getId() }}</td>
                                    <td>{{ post.getDatePost() }}</td>
                                    <td>{{ post.getDateModif() }}</td>
                                    <td>{{ post.getTitle()}}</td>
                                    <td>{{ post.getChapo()[:50]}}</td>
                                    <td>{{ post.getContent()[:100]|raw}}</td>
                                    <td>{{ post.getUser().getFirstname() }}</td>
                                    <td><button type="button" class="btn btn-block bg-gradient-success btn-flat" onclick="location.href='/admin/post/modify?id={{ post.getId() }}'">Modifier</button>
                                        <button type="button" class="btn btn-block bg-gradient-danger btn-flat" onclick="location.href='/admin/posts/delete?id={{ post.getId() }}'">Supprimer</button></td>
                                </tr>
                                {% endfor %}

                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>Numéro du billet</th>
                                    <th>Date du billet</th>
                                    <th>Date de la dernière modification</th>
                                    <th>Titre</th>
                                    <th>Chapô</th>
                                    <th>Texte</th>
                                    <th>Auteur</th>
                                    <th>Validation</th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    {% endblock %}